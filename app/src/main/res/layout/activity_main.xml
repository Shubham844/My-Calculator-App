<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:layout_above="@+id/result_tv"
        android:layout_margin="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp">

    </TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64sp">

    </TextView>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:background="#F1F1F1"
       android:padding="5dp"
       android:id="@+id/buttons_layout">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="C"
               android:textSize="32sp"
               android:backgroundTint="#FF9800"
               android:textColor="@color/white"
               android:id="@+id/button_c"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="("
               android:textSize="32sp"
               android:backgroundTint="#FF9800"
               android:textColor="@color/white"
               android:id="@+id/button_open_bracket"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text=")"
               android:textSize="32sp"
               android:backgroundTint="#FF9800"
               android:textColor="@color/white"
               android:id="@+id/button_close_bracket"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="/"
               android:textSize="32sp"
               android:backgroundTint="#FF98"
               android:textColor="@color/white"
               android:id="@+id/button_divide"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>




       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="1"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_one"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="2"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_two"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="3"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_three"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="+"
               android:textSize="32sp"
               android:backgroundTint="#FF98"
               android:textColor="@color/white"
               android:id="@+id/button_plus"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>




       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="4"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_four"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="5"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_five"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="6"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_six"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="-"
               android:textSize="32sp"
               android:backgroundTint="#FF98"
               android:textColor="@color/white"
               android:id="@+id/button_subtract"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>




       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="7"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_seven"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="8"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_eight"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="9"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_nine"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="*"
               android:textSize="32sp"
               android:backgroundTint="#FF98"
               android:textColor="@color/white"
               android:id="@+id/button_multiply"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>




       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="AC"
               android:backgroundTint="#FF9800"
               android:textSize="21sp"
               android:textColor="@color/white"
               android:id="@+id/button_all_clear"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="0"
               android:textSize="32sp"
               android:backgroundTint="#FF9800"
               android:textColor="@color/white"
               android:id="@+id/button_zero"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="."
               android:backgroundTint="#FF9800"
               android:textSize="32sp"
               android:textColor="@color/white"
               android:id="@+id/button_decimal"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>

           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="="
               android:textSize="32sp"
               android:backgroundTint="#FF98"
               android:textColor="@color/white"
               android:id="@+id/button_equal_to"
               android:layout_margin="12dp">

           </com.google.android.material.button.MaterialButton>




       </LinearLayout>

    </LinearLayout>





</RelativeLayout>

